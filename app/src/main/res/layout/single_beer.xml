<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/single_beer_card_height"
    android:layout_margin="@dimen/single_beer_card_margin">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/single_beer_icon_size"
            android:layout_height="@dimen/single_beer_icon_size"
            android:layout_marginLeft="@dimen/single_beer_margin"
            android:layout_marginStart="@dimen/single_beer_margin"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/single_beer_margin"
            android:layout_marginStart="@dimen/single_beer_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_beer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/single_beer_primary_text"
                android:text="@string/test"/>

            <TextView
                android:id="@+id/text_view_beer_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/single_beer_secondary_text"
                android:text="@string/test" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>